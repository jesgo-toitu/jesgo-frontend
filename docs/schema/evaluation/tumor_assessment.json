{
    "$schema": "../jesgo.json",
    "$id": "/schema/evaluation/tumor_assessment",
    "jesgo:unique": true,
    "type": "object",
    "title": "治療効果",
    "jesgo:parentschema": [
        "/schema/surveillance",
        "/schema/treatment/summary"
    ],
    "properties": {
        "判定": {
            "type": "string",
            "oneOf": [
                {
                    "const": "CR",
                    "title": "CR: 完全奏功(complete response)"
                },
                {
                    "const": "PR",
                    "title": "PR: 部分奏功(partial response)"
                },
                {
                    "const": "SD",
                    "title": "SD: 安定(stable disease)"
                },
                {
                    "const": "PD",
                    "title": "PD: 進行(progressive disease)"
                }
            ]
        },
        "評価法": {
            "type": "string",
            "enum": [
                "CT",
                "MRI",
                "PET-CT"
            ]
        },
        "縮小率": {
            "type": "number",
            "units": "%"
        }
    }
}
