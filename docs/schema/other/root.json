{
    "$schema": "../jesgo.json",
    "$id": "/schema/other/root",
    "type": "object",
    "title": "患者台帳",
    "description": "患者レコードの最上位に位置する基本情報.",
    "required": [
        "がん種",
        "診断日"
    ],
    "properties": {
        "がん種": {
            "type": "string",
            "enum": [
                "子宮頸がん",
                "子宮体がん",
                "卵巣がん・卵管がん・腹膜がん",
                "その他がん種"
            ],
            "jesgo:required": [
                "JSOG"
            ]
        },
        "診断日": {
            "type": "string",
            "format": "date"
        },
        "治療開始年月日": {
            "type": "string",
            "format": "date",
            "jesgo:required": [
                "JSOG"
            ],
            "jesgo:set": "eventdate",
            "$comment": "治療開始年月日が同じものは同時性重複癌としてマークされます."
        },
        "腫瘍登録対象": {
            "title": "婦人科腫瘍登録対象症例",
            "description": "*** 以下の症例は除外されます. ***<br>- 診断のみ行い、治療を行わなかった場合<br>- 試験開腹のみ行い、それ以後に何ら治療が行われていない場合<br>- 診断が最終的に細胞診のみによって下された場合<br>- 先行治療が他施設の場合<br>",
            "type": "string",
            "enum": [
                "いいえ",
                "はい"
            ],
            "jesgo:required": [
                "JSOG"
            ]
        },
        "腫瘍登録番号": {
            "type": "string",
            "pattern": "^(CC|EM|US|UAS|OV|VU|VA|TD)20[0-9]{2}-[1-9][0-9]*$",
            "jesgo:ui:enabledwhen": {
                "properties": {
                    "腫瘍登録対象": {
                        "const": "はい"
                    }
                }
            }
        }
    },
    "if": {
        "properties": {
            "腫瘍登録対象": {
                "const": "はい"
            }
        }
    },
    "then": {
        "properties": {
            "腫瘍登録番号": {
                "jesgo:required": [
                    "JSOG"
                ]
            }
        }
    },
    "additionalProperties": true
}
