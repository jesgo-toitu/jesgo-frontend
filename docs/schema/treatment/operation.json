{
    "$schema": "../jesgo.json",
    "$id": "/schema/treatment/operation",
    "type": "object",
    "title": "手術療法",
    "jesgo:ui:subschemastyle": "tab",
    "properties": {
        "手術日": {
            "type": "string",
            "format": "date",
            "jesgo:set": "eventdate"
        },
        "手術時間": {
            "description": "加刀~終刀までの時間(分)",
            "oneOf": [
                {
                    "type": "integer",
                    "units": "分",
                    "minimum": 0
                },
                {
                    "type": "string",
                    "pattern": "^([1-9][0-9]?:)?[0-5]?[0-9]$"
                }
            ]
        },
        "出血量": {
            "description": "加刀~終刀までの出血量(g)",
            "oneOf": [
                {
                    "type": "integer",
                    "units": "g",
                    "minimum": 0
                },
                {
                    "type": "string",
                    "const": "不明"
                }
            ]
        },
        "術者": {
            "type": "array",
            "description": "筆頭に執刀医、以下を助手として入力",
            "items": {
                "type": "string"
            }
        },
        "手術完遂度": {
            "type": "string",
            "enum": [
                "完全摘出",
                "不完全摘出（残存腫瘍径が 1cm未満）",
                "不完全摘出（残存腫瘍径が 1cm～2cm）",
                "不完全摘出（2cmをこえる）",
                "不明",
                "施行せず"
            ]
        }
    },
    "jesgo:subschema": [
        "/schema/treatment/operation_procedures",
        "/schema/treatment/operation_adverse_events"
    ]
}
