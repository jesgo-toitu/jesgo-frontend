{
    "$schema": "../jesgo.json",
    "$id": "/schema/treatment/supportive_care",
    "type": "object",
    "title": "緩和治療",
    "properties": {
        "評価日": {
            "type": "string",
            "format": "date",
            "jesgo:set": "eventdate"
        },
        "評価とその対応": {
            "type": "array",
            "jesgo:ui:subschemastyle": "row",
            "items": {
                "type": "object",
