{
    "$schema": "../jesgo.json",
    "$id": "/schema/root",
    "type": "object",
    "title": "患者台帳",
    "description": "腫瘍登録台帳（共通）.",
    "jesgo:unique": false,
    "jesgo:parentschema": [
        "/"
    ],
    "required": [
        "がん種"
    ],
    "properties": {
        "がん種": {
            "type": "string",
            "enum": [
                "子宮頸がん",
                "子宮体がん",
                "卵巣がん・卵管がん・腹膜がん",
                "その他がん種"
            ],
            "jesgo:required": [
                "JSOG"
            ]
        },
        "初回治療開始日": {
            "type": "string",
            "format": "date",
            "jesgo:get": "initial_treatment"
        },
        "診断日": {
            "type": "string",
            "format": "date"
        },
        "腫瘍登録対象": {
            "title": "婦人科腫瘍登録対象症例",
            "description": "*** 以下の症例は除外されます. ***<br>- 診断のみ行い、治療を行わなかった場合<br>- 試験開腹のみ行い、それ以後に何ら治療が行われていない場合<br>- 診断が最終的に細胞診のみによって下された場合<br>- 先行治療が他施設の場合<br>",
            "type": "string",
            "enum": [
                "いいえ",
                "はい"
            ],
            "jesgo:required": [
                "JSOG"
            ]
        }
    },
    "if": {
        "properties": {
            "腫瘍登録対象": {
                "const": "はい"
            }
        }
    },
    "then": {
        "properties": {
            "腫瘍登録番号": {
                "jesgo:required": [
                    "JSOG"
                ],
                "type": "string",
                "pattern": "^(CC|EM|US|UAS|OV|VU|VA|TD)20[0-9]{2}-[1-9][0-9]*$"
            }
        }
    }
}
