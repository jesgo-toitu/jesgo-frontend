{
    "$schema": "../jesgo.json",
    "$id": "/schema/summary/detailed",
    "type": "object",
    "title": "初診時情報 詳細",
    "$comment": "初診時基本的な確認情報.",
    "jesgo:unique": true,
    "jesgo:parentschema": [
        "/"
    ],
    "properties": {
        "初診日": {
            "type": "string",
            "description": "カルテ上の患者初診日",
            "format": "date"
        },
        "G": {
            "type": "integer",
            "title": "妊娠回数(G)",
            "default": 0,
            "minimum": 0
        },
        "P": {
            "type": "integer",
            "title": "分娩回数(P)",
            "default": 0,
            "minimum": 0
        },
        "閉経": {
            "oneOf": [
                {
                    "title":"入力形式：有無",
                    "type": "string",
                    "enum": [
                        "あり",
                        "なし"
                    ]
                },
                {
                    "title":"入力形式：年齢",
                    "type": "integer",
                    "units": "歳",
                    "minimum": 0
                }
            ],
            "description": "閉経のあり・なしもしくは年齢."
        },
        "現病歴": {
            "type": "string",
            "jesgo:ui:textarea": 5
        },
        "家族歴": {
            "type": "object",
            "properties": {
                "乳癌": {
                    "type": "string",
                    "jesgo:ui:textarea": 1
                },
                "子宮体がん": {
                    "type": "string",
                    "jesgo:ui:textarea": 1
                },
                "卵巣がん": {
                    "type": "string",
                    "jesgo:ui:textarea": 1
                },
                "HBOCリスク": {
                    "type": "string",
                    "jesgo:ui:textarea": 1
                },
                "その他": {
                    "type": "string",
                    "jesgo:ui:textarea": 2
                }
            }
        },
        "既往歴": {
            "type": "object",
            "properties": {
                "手術以外": {
                    "type": "string",
                    "jesgo:ui:textarea": 2
                },
                "手術歴": {
                    "type": "string",
                    "jesgo:ui:textarea": 2
                },
                "子宮摘出": {
                    "type": "string",
                    "enum": [
                        "あり",
                        "なし"
                    ]
                },
                "卵巣切除": {
                    "type": "string",
                    "enum": [
                        "なし",
                        "左",
                        "右",
                        "両側",
                        "不明"
                    ]
                },
                "卵管切除": {
                    "type": "string",
                    "enum": [
                        "なし",
                        "左",
                        "右",
                        "両側",
                        "不明"
                    ]
                }
            }
        },
        "アレルギー": {
            "type": "string",
            "jesgo:ui:textarea": 2
        },
        "嗜好": {
            "type": "object",
            "properties":{
                "喫煙": {
                    "type": "object",
                    "properties": {
                        "喫煙開始年齢": {
                            "type": "integer",
                            "minimum": 0
                        },
                        "喫煙中止年齢": {
                            "type": "integer",
                            "minimum": 0
                        },
                        "喫煙本数": {
                            "type": "integer",
                            "minimum": 0
                        }
                    }
                },
                "飲酒": {
                    "type": "object",
                    "properties": {
                        "飲酒歴": {
                            "type": "string",
                            "enum": [
                                "あり",
                                "なし"
                            ]
                        },
                        "量": {
                            "type": "string",
                            "jesgo:ui:textarea": 1
                        }
                    }
                }
            }
        },
        "併存疾患": {
            "type": "string",
            "jesgo:ui:textarea": 2
        },
        "内服薬": {
            "type": "string",
            "jesgo:ui:textarea": 2
        },
        "HPVワクチン": {
            "type": "object",
            "properties": {
                "接種回数": {
                    "type": "string",
                    "enum": [
                        "なし",
                        "1回",
                        "2回",
                        "3回"
                    ]

                },
                "接種開始年齢": {
                    "type": "integer",
                    "minimum": 0
                },
                "種類": {
                    "type": "string",
                    "enum": [
                        "2価ワクチン",
                        "4価ワクチン",
                        "9価ワクチン",
                        "不明"
                    ]
                }
            }
        }
    },
    "jesgo:subschema": [
        "/schema/evaluation/physical_status",
        "/schema/evaluation/performance_status"
    ]
}
