{
    "$schema": "../jesgo.json",
    "$id": "/schema/treatment/operation_adverse_events",
    "title": "手術合併症",
    "type": "object",
    "properties": {
        "合併症の有無": {
            "type": "string",
            "enum": [
                "なし",
                "あり"
            ]
        },
        "合併症": {
            "type": "array",
            "jesgo:ui:visibleWhen": {
                "properties": {
                    "合併症の有無": {
                        "const": "あり"
                    }
                }
            },
            "items": {
                "$ref": "#/$defs/AE"
            }
        }
    },
    "$defs": {
        "AE": {
            "type": "object",
            "合併症の種別": {
                "type": "string",
                "$comment": "JSGOEではAE.*.Categoryにマップ",
                "enum": [
                    "出血",
                    "術中手術操作",
                    "気腹・潅流操作",
                    "機器の不具合・破損",
                    "機器の誤操作",
                    "術中使用した薬剤",
                    "体腔内遺残",
                    "術後"
                ]
            },
            "出血量": {
                "type": "string",
                "$comment": "JSGOEではAE.*.BloodCountにマップ",
                "pattern": "(不明|([1-9][0-9]+|[5-9])[0-9][0-9])",
                "jesgo:ref": "../出血量"
            },
            "発生した合併症": {
                "$comment": "JSGOEではAE.*.Titleにマップ"            
            },
            "関連する機器": {
                "$comment": "JSGOEではAE.*.Causeにマップ"
            },
            "発生部位": {
                "$comment": "JSGOEではAE.*.Locationにマップ"
            },
            "関連する薬剤": {
                "$comment": "JSGOEではAE.*.Causeにマップ"
            },
            "遺残したもの": {
                "type": "array",
                "$comment": "JSGOEではAE.*.Titleにマップ",
                "items": {
                    "type": "string",
                    "enum": [
                        "検体", "器械", "ガーゼなど衛生材料", "針",
                        "上記にないもの"
                    ]
                }
            },
            "合併症の内容": {
                "type": "array",
                "$comment": "JSGOEではAE.*.Titleにマップ",
                "items": {
                    "type": "string",
                    "enum": [
                        "出血", "血腫",
                        "創部感染", "創離開", "腟断端部離開",
                        "メッシュ露出", "腹膜炎", "子宮感染", "卵管・卵巣感染", "メッシュ感染",
                        "イレウス", "腸閉塞", "消化管穿孔",
                        "腹壁瘢痕・ポートサイトヘルニア",
                        "尿管損傷", "尿路閉塞", "膀胱損傷",
                        "肺動脈血栓塞栓症", "深部静脈血栓症",
                        "気胸", "心肺停止",
                        "コンパートメント症候群", "上肢神経障害", "下肢神経障害",
                        "リンパ浮腫", "非感染性リンパ嚢胞", "感染性リンパ嚢胞・後腹膜膿瘍",
                        "子宮腔からの出血持続", "子宮腔の癒着", "卵管閉塞"
                    ]
                }
            },
            "Grade": {
                "type": "string",
                "title": "合併症のGrade",
                "anyOf": [
                    {
                        "type": "string",
                        "enum": [
                            "1"
                        ],
                        "title": "Grade 1: 正常な術後経過からの逸脱"
                    },
                    {
                        "type": "string",
                        "enum": [
                            "2"
                        ],
                        "title": "Grade 2: 中等症 輸血および中心静脈栄養を要する場合を含む"
                    },
                    {
                        "type": "string",
                        "enum": [
                            "3a"
                        ],
                        "title": "Grade 3a: 全身麻酔を要さない治療介入を要する"
                    },
                    {
                        "type": "string",
                        "enum": [
                            "3b"
                        ],
                        "title": "Grade 3b: 全身麻酔下での治療介入を要する"
                    },
                    {
                        "type": "string",
                        "enum": [
                            "4"
                        ],
                        "title": "Grade 4: ICU管理を要する、合併症により生命を脅かす状態"
                    },
                    {
                        "type": "string",
                        "enum": [
                            "5"
                        ],
                        "title": "Grade 5: 死亡"
                    }
                ]
            },
            "転帰": {
                "type": "array",
                "title": "合併症の転帰",
                "jesgo:ui:listtype": "buttons",
                "items": {
                    "type": "string",
                    "anyOf": [
                        {
                            "type": "string",
                            "enum": [
                                "経過観察"
                            ],
                            "title": "経過観察"
                        },
                        {
                            "type": "string",
                            "enum": [
                                "周術期管理の延長"
                            ],
                            "title": "周術期管理の延長"
                        },
                        {
                            "type": "string",
                            "enum": [
                                "入院期間の延長"
                            ],
                            "title": "入院期間の延長"
                        },
                        {
                            "type": "string",
                            "enum": [
                                "再入院"
                            ],
                            "title": "再入院"
                        },
                        {
                            "type": "string",
                            "enum": [
                                "自己血輸血・術中回収血"
                            ],
                            "title": "自己血輸血・術中回収血"
                        },
                        {
                            "type": "string",
                            "enum": [
                                "輸血・血液製剤"
                            ],
                            "title": "輸血・血液製剤"
                        },
                        {
                            "type": "string",
                            "enum": [
                                "術中の追加手術～開腹"
                            ],
                            "title": "術中の追加手術～開腹"
                        },
                        {
                            "type": "string",
                            "enum": [
                                "術中の追加手術～腹腔鏡"
                            ],
                            "title": "術中の追加手術～腹腔鏡"
                        },
                        {
                            "type": "string",
                            "enum": [
                                "術中の追加手術～子宮鏡"
                            ],
                            "title": "術中の追加手術～子宮鏡"
                        },
                        {
                            "type": "string",
                            "enum": [
                                "術中の追加手術～経腟"
                            ],
                            "title": "術中の追加手術～経腟"
                        },
                        {
                            "type": "string",
                            "enum": [
                                "術中の追加手術～その他"
                            ],
                            "title": "術中の追加手術～その他"
                        },
                        {
                            "type": "string",
                            "enum": [
                                "術後の再手術～開腹"
                            ],
                            "title": "術後の再手術～開腹"
                        },
                        {
                            "type": "string",
                            "enum": [
                                "術後の再手術～腹腔鏡"
                            ],
                            "title": "術後の再手術～腹腔鏡"
                        },
                        {
                            "type": "string",
                            "enum": [
                                "術後の再手術～子宮鏡"
                            ],
                            "title": "術後の再手術～子宮鏡"
                        },
                        {
                            "type": "string",
                            "enum": [
                                "術後の再手術～経腟"
                            ],
                            "title": "術後の再手術～経腟"
                        },
                        {
                            "type": "string",
                            "enum": [
                                "術後の再手術～その他"
                            ],
                            "title": "術後の再手術～その他"
                        },
                        {
                            "type": "string",
                            "enum": [
                                "ICU管理"
                            ],
                            "title": "合併症管理のためICU入室"
                        },
                        {
                            "type": "string",
                            "enum": [
                                "死亡"
                            ],
                            "title": "死亡"
                        }
                    ]
                }
            }
        }
    },
    "allOf": [
        {
            "if": {
                "properties": {
                    "合併症の種別": {
                        "const": "出血"
                    }            
                }
            },
            "then": {
                "properties": {
                    "出血量": {
                        "type": "string",
                        "$comment": "JSGOEではAE.*.BloodCountにマップ",
                        "pattern": "(不明|([1-9][0-9]+|[5-9])[0-9][0-9])",
                        "jesgo:ref": "../出血量"
                    }
                },
                "発生した合併症": {},
                "関連する機器": {},
                "発生部位": {},
                "関連する薬剤": {},
                "required": [
                    "合併症の種別", "出血量", "Grade", "転帰"
                ]
            }
        },
        {
            "if": {
                "properties": {
                    "合併症の種別": {
                        "const": "術中手術操作"
                    }
                }
            },
            "then": {
                "properties": {
                    "出血量": {},
                    "発生した合併症": {
                        "type": "array",
                        "items": {
                            "type": "string",
                            "enum": [
                                "臓器損傷",
                                "出血"
                            ]
                        },
                        "minItems": 1
                    },
                    "関連する機器": {},
                    "発生部位": {
                        "type": "array",
                        "items": {
                            "type": "string",
                            "enum": [
                                "子宮", "卵管", "卵巣", "腟",
                                "膀胱", "尿管",
                                "後腹膜", "直腸", "結腸", "消化管",
                                "腹壁", "腹壁血管", "皮下",
                                "動脈", "静脈", "大血管動脈", "大血管静脈",
                                "神経", "骨格系",
                                "上記にない部位"
                            ]
                        },
                        "minItems": 1
                    },
                    "関連する薬剤": {}
                },
                "required": [
                    "合併症の種別", "発生した合併症", "発生部位", "Grade", "転帰"
                ]
            }
        },
        {
            "if": {
                "properties": {
                    "合併症の種別": {
                        "const": "気腹・潅流操作"
                    }
                }
            },
            "then": {
                "properties": {
                    "出血量": {},
                    "発生した合併症": {
                        "type": "array",
                        "items": {
                            "type": "string",
                            "enum": [
                                "皮下気腫",
                                "ガス塞栓(炭酸ガス)", "ガス塞栓(空気)",
                                "水中毒",
                                "そのほか心臓障害", "そのほか呼吸器障害", "そのほか神経系障害",
                                "上記以外"
                            ],
                            "minItems": 1
                        }
                    },
                    "関連する機器": {},
                    "発生部位": {},
                    "関連する薬剤": {}
                },
                "required": [
                    "合併症の種別", "発生した合併症", "Grade", "転帰"
                ]    
            }
        },
        {
            "if": {
                "properties": {
                    "合併症の種別": {
                        "enum": [
                            "機器の不具合・破損",
                            "機器の誤操作"
                        ]
                    }
                }
            },
            "then": {
                "properties": {
                    "出血量": {},
                    "発生した合併症": {
                        "type": "string",
                        "$comment": "JSGOEではAE.*.Titleにマップ",
                        "enum": [
                            "臓器損傷",
                            "出血"
                        ]
                    },
                    "関連する機器": {
                        "type": "array",
                        "items": {
                            "type": "string",
                            "anyOf": [
                                {
                                    "type": "string",
                                    "enum": [
                                        "鉗子"
                                    ],
                                    "title": "鉗子"
                                },
                                {
                                    "type": "string",
                                    "enum": [
                                        "内視鏡"
                                    ],
                                    "title": "内視鏡"
                                },
                                {
                                    "type": "string",
                                    "enum": [
                                        "カテーテル"
                                    ],
                                    "title": "カテーテル"
                                },
                                {
                                    "type": "string",
                                    "enum": [
                                        "内視鏡関連装置"
                                    ],
                                    "title": "内視鏡関連装置"
                                },
                                {
                                    "type": "string",
                                    "enum": [
                                        "潅流気腹装置"
                                    ],
                                    "title": "潅流気腹装置"
                                },
                                {
                                    "type": "string",
                                    "enum": [
                                        "トロッカー"
                                    ],
                                    "title": "トロッカー"
                                },
                                {
                                    "type": "string",
                                    "enum": [
                                        "子宮操作器具"
                                    ],
                                    "title": "子宮操作器具"
                                },
                                {
                                    "type": "string",
                                    "enum": [
                                        "組織回収器具"
                                    ],
                                    "title": "組織回収器具"
                                },
                                {
                                    "type": "string",
                                    "enum": [
                                        "止血材料"
                                    ],
                                    "title": "止血材料"
                                },
                                {
                                    "type": "string",
                                    "enum": [
                                        "ステープラー"
                                    ],
                                    "title": "ステープラー"
                                },
                                {
                                    "type": "string",
                                    "enum": [
                                        "電気メス"
                                    ],
                                    "title": "電気メス"
                                },
                                {
                                    "type": "string",
                                    "enum": [
                                        "SUS"
                                    ],
                                    "title": "超音波凝固切開装置"
                                },
                                {
                                    "type": "string",
                                    "enum": [
                                        "VSS"
                                    ],
                                    "title": "ベッセルシーリングシステム"
                                },
                                {
                                    "type": "string",
                                    "enum": [
                                        "レーザー"
                                    ],
                                    "title": "レーザー"
                                },
                                {
                                    "type": "string",
                                    "enum": [
                                        "マイクロ波"
                                    ],
                                    "title": "マイクロ波"
                                },
                                {
                                    "type": "string",
                                    "enum": [
                                        "上記にないもの"
                                    ],
                                    "title": "上記にないもの"
                                }
                            ],
                            "minItems": 1
                        }
                    },
                    "発生部位": {
                        "type": "array",
                        "$comment": "JSGOEではAE.*.Locationにマップ",
                        "items": {
                            "type": "string",
                            "enum": [
                                "子宮", "卵管", "卵巣", "腟",
                                "膀胱", "尿管",
                                "後腹膜", "直腸", "結腸", "消化管",
                                "腹壁", "腹壁血管", "皮下",
                                "動脈", "静脈", "大血管動脈", "大血管静脈",
                                "神経", "骨格系",
                                "上記にない部位"
                            ]
                        }
                    },
                    "関連する薬剤": {}
                },
                "required": [
                    "合併症の種別", "関連する機器", "Grade", "転帰"
                ]
            }
        },
        {
            "if": {
                "properties": {
                    "合併症の種別": {
                        "const": "術中使用した薬剤"
                    }
                }
            },
            "then": {
                "properties": {
                    "出血量": {},
                    "関連する薬剤": {
                        "type": "array",
                        "$comment": "JSGOEではAE.*.Causeにマップ",
                        "items": {
                            "type": "string",
                            "enum": [
                                "バソプレッシン", "アドレナリン",
                                "インジゴカルミン",
                                "上記にないもの"
                            ]
                        }
                    },        
                    "発生した合併症": {
                        "type": "array",
                        "$comment": "JSGOEではAE.*.Titleにマップ",
                        "items": {
                            "type": "string",
                            "enum": [
                                "アナフィラキシー",
                                "心停止", "徐脈", "頻脈",
                                "それ以外"
                            ]
                        }
                    },
                    "関連する機器": {},
                    "発生部位": {}
                },
                "required": [
                    "関連する薬剤", "発生した合併症", "Grade", "転帰"
                ]
            }
        },
        {
            "if": {
                "properties": {
                    "合併症の種別": {
                        "const": "体腔内遺残"
                    }
                }
            },
            "then": {
                "properties": {
                }
            }
        },
        {
            "if": {
                "properties": {
                    "合併症の種別": {
                        "const": "術後"
                    }
                }
            },
            "then": {
                "properties": {
                }
            }
        }
    ]
}
